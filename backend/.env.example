# Configuración de Base de Datos
DB_HOST=localhost
DB_PORT=5432
DB_NAME=gesthor_db
DB_USER=postgres
DB_PASSWORD=tu_password

# Configuración del Servidor
PORT=3000
NODE_ENV=development

# JWT
JWT_SECRET=tu_secreto_jwt_super_seguro_cambialo

# Configuración de Email SMTP
# ==========================================
# Nombre de la aplicación (aparece en los correos)
APP_NAME=GestHor
# URL de la aplicación (para links en correos)
APP_URL=http://localhost:5173

# ==========================================
# Configuración para Gmail
# ==========================================
# 1. Activa "Verificación en 2 pasos" en tu cuenta de Gmail
# 2. Genera una "Contraseña de aplicación": https://myaccount.google.com/apppasswords
# 3. Usa esa contraseña generada en SMTP_PASSWORD

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=tu_correo@gmail.com
SMTP_PASSWORD=tu_contraseña_de_aplicacion
SMTP_FROM_EMAIL=tu_correo@gmail.com
SMTP_TLS_REJECT_UNAUTHORIZED=false

# ==========================================
# Configuración para Outlook/Hotmail
# ==========================================
# SMTP_HOST=smtp-mail.outlook.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=tu_correo@outlook.com
# SMTP_PASSWORD=tu_contraseña
# SMTP_FROM_EMAIL=tu_correo@outlook.com
# SMTP_TLS_REJECT_UNAUTHORIZED=true

# ==========================================
# Configuración para servidor SMTP personalizado
# ==========================================
# SMTP_HOST=smtp.tuservidor.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=usuario@tudominio.com
# SMTP_PASSWORD=tu_contraseña
# SMTP_FROM_EMAIL=noreply@tudominio.com
# SMTP_TLS_REJECT_UNAUTHORIZED=true

# ==========================================
# Notas importantes:
# ==========================================
# - SMTP_PORT: 587 (TLS) o 465 (SSL)
# - SMTP_SECURE: true para puerto 465, false para 587
# - Para Gmail: debes usar una contraseña de aplicación, no tu contraseña normal
# - SMTP_TLS_REJECT_UNAUTHORIZED: false para certificados autofirmados (desarrollo)
